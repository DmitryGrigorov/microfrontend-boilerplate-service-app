{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@models/*": ["./src/models/*"],
      "@service/*": ["./src/service/*"],
      "@constants/*": ["./src/constants/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
